<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<div class="container">
  <div class="row">
    <h3>Pokemon</h3>
    <div class="column">
      <table class="table">
        <tbody>
        	<tr>
        		<td>Name</td>
        		<td>Level</td>
            <td>Health</td>
        	</tr>
          <% @trainer.pokemon.each do |pokemon| %>
          	<% if pokemon %>
              <% if @trainer.id == current_trainer.id%>
  	            <tr>
                  <%= render pokemon %>
                    <% if pokemon.health < 100 %>
                      <td><%= button_to "Heal", heal_path(id: pokemon.id), :class => "button medium", :method => :patch %></td>
                    <% end %>
  	            </tr>
              <% else %>
                <% if pokemon.health > 0 %>
                  <%= render pokemon %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
          <% if @trainer.id == current_trainer.id %>
            <td><%= button_to "Create a Pokemon", makeform_path, :class => "button medium", :method => :get %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
